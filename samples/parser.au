Node parse (string src) {
  Node result = newNode("program", "");

  Parser parser = newParser(lex_tokens(src), 0);

  while (!(tk_tp(peek(parser)) == "eof")) {
    Node node = parseTopLevel(parser);
    Node_push(result, node);
  }

  return result;
}

