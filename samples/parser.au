  }
  if (maybe(p, "is")) {
    Node nxt = newNode("is", "");
    Node_push(nxt, base);
    Node_push(nxt, parseType(p));
    base = Node_inline(nxt, line);
  }
  return base;
}

Node parseExpr (Parser p) {
  Node left = parseSuffix(p);
  while (isBinop(p.peek().tp)) {
    string op = next(p).tp;
    Node right = parseSuffix(p);
    Node node = newNode("binop", op);
    if (op == "||") node.tp = "logic";
    if (op == "&&") node.tp = "logic";
    Node_push(node, left);
    Node_push(node, right);
    left = node;
  }
  return left;
}

Node parseExprList (Parser p, string end) {
  Node node = newNode("exprlist", "");
  if (p.peek().tp == end) goto end;
  nextexpr:
    Node_push(node, parseExpr(p));
    if (maybe(p, ",")) goto nextexpr;
  end:
  check(next(p), end);
  return node;
}




